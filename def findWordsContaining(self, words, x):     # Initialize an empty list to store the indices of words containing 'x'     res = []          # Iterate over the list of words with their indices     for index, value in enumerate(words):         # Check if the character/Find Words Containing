def findWordsContaining(self, words, x):
    # Initialize an empty list to store the indices of words containing 'x'
    res = []
    
    # Iterate over the list of words with their indices
    for index, value in enumerate(words):
        # Check if the character/string 'x' is present in the current word
        if x in value:
            # If found, append the index of the word to the result list
            res.append(index)
    
    # Return the list of indices where 'x' is found in the words
    return res
